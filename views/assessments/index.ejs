<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>My Assessments</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="page-container">
      <div class="page-header">
      <h1>My Assessments (<%= user.firstName %>)</h1>
      <a href="/users/<%= user._id %>/assessments/create" class="button app-button">+ New Assessment</a>
    </div>
      <% if (assessments && assessments.length > 0) { %> 
      <% assessments.forEach((assessment) => { %>
      <div class="assessment-card">
        <h2><%= assessment.title %></h2>
        <div class="button-row">
          <!-- Results button -->
          <a
            href="/users/<%= user._id %>/assessments/<%= assessment._id %>/results"
            class="button app-button"
          >
            Results
          </a>
          <!-- Delete button -->
          <form
            action="/users/<%= user._id %>/assessments/<%= assessment._id %>?_method=DELETE"
            method="POST"
            onsubmit="return confirm('Are you sure you want to delete this assessment?');"
          >
            <button type="submit" class="button app-button">Delete</button>
          </form>
        </div>
      </div>
      <% }) %> <% } else { %>
      <p>No assessments found.</p>
      <% } %>
    </div>
  </body>
</html>
